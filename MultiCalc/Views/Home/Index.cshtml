@{
    ViewBag.Title = "MultiCalc";
}
<h2>Calculations</h2>
<h4>Application that can be given a number and can find the sum of particular multiples.</h4>
<div class="container">
    <div class="row extra-bottom-padding">
        <div class="col-md-12">
            <form class="form-inline">
                <div class="form-group">
                    <label for="factors">Factors: </label>
                    <input type="text" id="factors" placeholder="3,5" class="form-control" />
                    <label for="particularNumberMax">Particular number max: </label>
                    <input type="text" id="particularNumberMax" placeholder="10" class="form-control" />
                    <input type="button" id="sendmessage" class="btn btn-default" value="Send" />
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">My calculations in process</h3>
                </div>
                <div class="panel-body">
                    <div id="myMultiCalcJobs" class="list-group"></div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">My completed calculations</h3>
                </div>
                <div class="panel-body">
                    <ul id="myMultiCalcCompleted" class="list-group"></ul>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Everyone's calculations</h3>
                </div>
                <div class="panel-body">
                    <ul id="allMultiCalcJobsStatus" class="list-group"></ul>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var multiCalcHub = $.connection.multiCalcHub;
            // Create a function that the hub can call back to display messages.
            multiCalcHub.client.notifyMyMultiCalcJobs = function (message) {
                var json = $.parseJSON(message);
                // Add the message to the page.
                $('#myMultiCalcJobs').prepend('<li class="list-group-item"><div>Time: ' + htmlEncode(json.TimeOfRequest) + '</div><div>Factors: ' + htmlEncode(json.CalcModel.Factors) + '</div><div>ParticularNumberMax:' + htmlEncode(json.CalcModel.ParticularNumberMax) + '</div><div><a data-toggle="collapse" href="#collapse' + htmlEncode(json.RequestId) + '" aria-expanded="false" aria-controls="collapse' + htmlEncode(json.RequestId) + '">- Show raw data</a><div><div class="collapse" id="collapse' + htmlEncode(json.RequestId) + '"><div class="well" style="word-wrap:break-word;">' + message + '</div></div></li>');

            };
            multiCalcHub.client.notifyMyMultiCalcCompleted = function (message) {
                var json = $.parseJSON(message);
                // Add the message to the page.
                $('#myMultiCalcCompleted').prepend('<li class="list-group-item"><div>Time: ' + htmlEncode(json.TimeOfRequest) + '</div><div>Factors: ' + htmlEncode(json.CalcModel.Factors) + '</div><div>ParticularNumberMax:' + htmlEncode(json.CalcModel.ParticularNumberMax) + '</div><div>SumOfMultiples:' + htmlEncode(json.SumOfMultiples) + '</div><div><a data-toggle="collapse" href="#collapse2' + htmlEncode(json.RequestId) + '" aria-expanded="false" aria-controls="collapse2' + htmlEncode(json.RequestId) + '">- Show raw data</a><div><div class="collapse" id="collapse2' + htmlEncode(json.RequestId) + '"><div class="well" style="word-wrap:break-word;">' + message + '</div></div></li>');
            };
            multiCalcHub.client.notifyAllMessage = function (message) {
                var json = $.parseJSON(message);
                // Add the message to the page.
                $('#allMultiCalcJobsStatus').prepend('<li class="list-group-item"><div>Time: ' + htmlEncode(json.TimeOfRequest) + '</div><div>Factors: ' + htmlEncode(json.CalcModel.Factors) + '</div><div>ParticularNumberMax:' + htmlEncode(json.CalcModel.ParticularNumberMax) + '</div><div>SumOfMultiples:' + htmlEncode(json.SumOfMultiples) + '</div><div><a data-toggle="collapse" href="#collapse3' + htmlEncode(json.RequestId) + '" aria-expanded="false" aria-controls="collapse3' + htmlEncode(json.RequestId) + '">- Show raw data</a><div><div class="collapse" id="collapse3' + htmlEncode(json.RequestId) + '"><div class="well" style="word-wrap:break-word;">' + message + '</div></div></li>');
            };
            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    multiCalcHub.server.addMultiCalcToQueue($('#factors').val(), $('#particularNumberMax').val());
                    // Clear text box and reset focus for next comment.
                    $('#factors').val('').focus();
                    $('#particularNumberMax').val('').focus();
                });
            });
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}
